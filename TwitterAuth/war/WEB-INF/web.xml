<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>TwitterService</servlet-name>
    <servlet-class>it.polimi.server.TwitterServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TwitterService</servlet-name>
    <url-pattern>/twitterauth/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>TwitterServlet</servlet-name>
    <servlet-class>it.polimi.server.GetTokenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TwitterServlet</servlet-name>
    <url-pattern>/gettokenservlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>TwitterCallback</servlet-name>
    <servlet-class>it.polimi.server.TwitterCallback</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TwitterCallback</servlet-name>
    <url-pattern>/twittercallback</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TwitterAuth.html</welcome-file>
  </welcome-file-list>
  
  

</web-app>
